%h1 Listing tags

%table
  %thead
    %tr
      %th Tag
      %th Url
      %th Expert
      %th
      %th
      %th

  %tbody
    - @tags.each do |tag|
      %tr
        %td= tag.tag
        %td= tag.url
        %td= tag.expert
        %td= link_to 'Show', tag
        %td= link_to 'Edit', edit_tag_path(tag)
        %td= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' }

